@model List<UserModel>

@{
    Layout = "_Layout";
    var errorMessage = ViewData["ErrorMessage"] as string;
}

<html>
<head>
    <link rel="stylesheet" href="~/css/users.css" asp-append-version="true" />
    <title>Пользователи</title>
</head>
<body>
    <h1>Пользователи</h1>
    @if (!string.IsNullOrEmpty(errorMessage))
    {
            <div class="alert alert-danger" role="alert">
            @errorMessage
            </div>
    }
    <a asp-action="Create" class="btn btn-primary">Добавить пользователя</a>
    <table class="table">
        <thead>
            <tr> 
                <th>Логин</th>
                <th>Пароль</th>
                <th>Роль</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                        <tr>
                            <td>@user.Login</td>
                            <td>@Hashing.DecryptPassword(@user.Password)</td>
                            <td>@user.Role</td>
                            <td>
                                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn-edit">Изменить</a> |
                                    <a asp-action="Delete" asp-route-id="@user.UserId" class="btn-delete">Удалить</a>
                            </td>
                        </tr>
            }
        </tbody>
    </table>
</body>
</html>